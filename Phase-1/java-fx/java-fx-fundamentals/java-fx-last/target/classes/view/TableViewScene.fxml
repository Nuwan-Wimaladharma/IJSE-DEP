   <children>
      <Button fx:id="btnNew" layoutX="25.0" layoutY="24.0" onAction="#btnNewOnAction" text="_+NEW EMPLOYEE">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <HBox layoutX="25.0" layoutY="88.0" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label fx:id="lblId" mnemonicParsing="true" text="_ID             :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtId" prefHeight="33.0" prefWidth="798.0" promptText="Eg. E001" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="25.0" layoutY="138.0" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label fx:id="lblName" mnemonicParsing="true" text="_NAME       :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtName" prefHeight="33.0" prefWidth="798.0" promptText="Eg. Kasun Tharaka" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="25.0" layoutY="187.0" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label fx:id="lblAddress" mnemonicParsing="true" text="_ADDRESS :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtAddress" prefHeight="33.0" prefWidth="798.0" promptText="Eg. Grase Peiris Road, Panadura" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="157.0" layoutY="240.0" prefHeight="33.0" prefWidth="798.0" spacing="20.0" AnchorPane.leftAnchor="158.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Button fx:id="btnSave" onAction="#btnSaveOnAction" prefHeight="33.0" prefWidth="117.0" text="_SAVE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" onAction="#btnDeleteOnAction" prefHeight="33.0" prefWidth="118.0" text="_DELETE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox layoutX="25.0" layoutY="298.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <TableView fx:id="tblEmployees" prefHeight="387.0" prefWidth="936.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="163.0" text="ID" />
                <TableColumn prefWidth="196.0" text="NAME" />
                  <TableColumn prefWidth="575.0" text="ADDRESS" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
