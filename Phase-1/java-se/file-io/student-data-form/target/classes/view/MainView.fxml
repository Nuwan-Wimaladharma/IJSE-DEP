<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="615.0" prefWidth="695.0" stylesheets="@../css/MainViewStyles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.controller.MainViewController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="25.0" prefHeight="33.0" prefWidth="649.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Button fx:id="btnNew" mnemonicParsing="false" onAction="#btnNewOnAction" text="NEW STUDENT +" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="89.0" prefHeight="33.0" prefWidth="655.0" spacing="75.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label text="Student ID :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtID" disable="true" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="473.0" promptText="Ex: S001" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="139.0" prefHeight="33.0" prefWidth="649.0" spacing="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label text="Student Name :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtName" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="474.0" promptText="Ex: Nuwan Wimaladharma" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="25.0" layoutY="195.0" prefHeight="33.0" prefWidth="649.0" spacing="22.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label text="Student Address :" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtAddress" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="473.0" promptText="Ex: Pinwatta, Panadura" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox layoutX="204.0" layoutY="254.0" prefHeight="33.0" prefWidth="250.0" spacing="25.0" AnchorPane.leftAnchor="204.0" AnchorPane.rightAnchor="241.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="33.0" prefWidth="94.0" text="SAVE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="DELETE" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox layoutX="25.0" layoutY="308.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <TableView fx:id="tblStudents" maxWidth="1.7976931348623157E308" prefHeight="294.0" prefWidth="649.0" HBox.hgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="96.0" text="STUDENT ID" />
                <TableColumn prefWidth="231.0" text="STUDENT NAME" />
                  <TableColumn prefWidth="327.0" text="STUDENT ADDRESS" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>
